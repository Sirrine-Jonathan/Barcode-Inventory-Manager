<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="5dp">

    <ImageView
        android:id="@+id/warning_image"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_warning_24dp"/>
    <ImageView
        android:id="@+id/depleted_image"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        android:visibility="invisible" app:srcCompat="@drawable/ic_error_24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:gravity="start|center_vertical"
            android:paddingBottom="4dp"
            android:paddingRight="4dp" android:paddingTop="4dp" android:text="Product name"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.20" android:gravity="center_vertical"
            android:text="Qty: 0" android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>